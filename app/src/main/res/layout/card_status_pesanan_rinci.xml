<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ijo_ufresh"
        android:paddingVertical="20dp"
        android:paddingHorizontal="15dp">

        <ImageView
            android:id="@+id/img__status__rinci"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/receipt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/status__pesanan__rinci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi Pembayaran Belum Selesai"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Keterangan Lebih Lengkap"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/status__pesanan__rinci"
            app:layout_constraintTop_toBottomOf="@+id/status__pesanan__rinci" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>